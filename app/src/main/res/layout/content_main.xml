<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutHolder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false">

    <LinearLayout
        android:id="@+id/left_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".5"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/left_layout_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/left_layout_top_left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.7"
                android:background="@color/colorPrimary">

            </androidx.constraintlayout.widget.ConstraintLayout>


            <GridLayout
                android:id="@+id/gridLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:columnCount="5"
                android:rowCount="5">

                <TextView
                    android:id="@+id/text_00"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:background="@mipmap/square"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:scaleType="fitXY"
                    android:textColor="@color/colorPrimary"
                    android:textSize="22dp"
                    android:textStyle="bold"

                    android:tintMode="screen"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/text_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:background="@mipmap/square"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:scaleType="fitXY"

                    android:textColor="@color/colorPrimary"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/text_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:background="@mipmap/square"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:scaleType="fitXY"

                    android:textColor="@color/colorPrimary"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/text_03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_rowWeight="1"

                    android:layout_column="3"
                    android:layout_columnWeight="1"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:background="@mipmap/square"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:scaleType="fitXY"

                    android:textColor="@color/colorPrimary"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/text_04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_rowWeight="1"

                    android:layout_column="4"
                    android:layout_columnWeight="1"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:background="@mipmap/square"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:scaleType="fitXY"

                    android:textColor="@color/colorPrimary"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/text_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_rowWeight="1"

                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_marginRight="1dp"

                    android:layout_marginBottom="1dp"
                    android:background="@mipmap/square"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:scaleType="fitXY"

                    android:textColor="@color/colorPrimary"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/text_11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:background="@mipmap/square"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:scaleType="fitXY"

                    android:textColor="@color/colorPrimary"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/text_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:background="@mipmap/square"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:scaleType="fitXY"

                    android:textColor="@color/colorPrimary"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/text_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="3"
                    android:layout_columnWeight="1"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:background="@mipmap/square"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:scaleType="fitXY"

                    android:textColor="@color/colorPrimary"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/text_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="4"
                    android:layout_columnWeight="1"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:background="@mipmap/square"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:scaleType="fitXY"

                    android:textColor="@color/colorPrimary"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/text_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_rowWeight="1"
                    android:layout_column="0"

                    android:layout_columnWeight="1"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:background="@mipmap/square"
                    android:cropToPadding="false"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:scaleType="fitXY"

                    android:textColor="@color/colorPrimary"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/text_21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:background="@mipmap/square"
                    android:cropToPadding="false"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:scaleType="fitXY"

                    android:textColor="@color/colorPrimary"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/text_22"

                    android:layout_row="2"
                    android:layout_rowWeight="1"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:background="@mipmap/square"
                    android:cropToPadding="false"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:scaleType="fitXY"

                    android:textColor="@color/colorPrimary"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/text_23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_rowWeight="1"
                    android:layout_column="3"
                    android:layout_columnWeight="1"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:background="@mipmap/square"
                    android:cropToPadding="false"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:scaleType="fitXY"

                    android:textColor="@color/colorPrimary"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/text_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_rowWeight="1"
                    android:layout_column="4"
                    android:layout_columnWeight="1"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:background="@mipmap/square"
                    android:cropToPadding="false"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:scaleType="fitXY"

                    android:textColor="@color/colorPrimary"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/text_30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:background="@mipmap/square"
                    android:cropToPadding="false"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:scaleType="fitXY"

                    android:textColor="@color/colorPrimary"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:typeface="serif" />


                <TextView
                    android:id="@+id/text_31"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:background="@mipmap/square"
                    android:cropToPadding="false"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:scaleType="fitXY"

                    android:textColor="@color/colorPrimary"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/text_32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_rowWeight="1"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:background="@mipmap/square"
                    android:cropToPadding="false"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:scaleType="fitXY"

                    android:textColor="@color/colorPrimary"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/text_33"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_rowWeight="1"
                    android:layout_column="3"
                    android:layout_columnWeight="1"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:background="@mipmap/square"
                    android:cropToPadding="false"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:scaleType="fitXY"

                    android:textColor="@color/colorPrimary"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/text_34"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_rowWeight="1"
                    android:layout_column="4"
                    android:layout_columnWeight="1"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:background="@mipmap/square"
                    android:cropToPadding="false"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:scaleType="fitXY"

                    android:textColor="@color/colorPrimary"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:typeface="serif" />


            </GridLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/left_layout_top_right"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.7"
                android:background="@color/colorPrimary">


            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/rightLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.5"
        android:orientation="vertical"
        android:scrollbarAlwaysDrawHorizontalTrack="true">

        <!-- Game name section -->
        <LinearLayout
            android:id="@+id/gameNameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:background="#7EA0C9"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewGameName"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="top|bottom|center"
                android:text="@string/monkeyLadder"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </LinearLayout>

        <!--Various Game info section-->
        <LinearLayout
            android:id="@+id/gameInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="#607A9F"
            android:orientation="vertical">

            <!--User Input Section-->
            <LinearLayout
                android:id="@+id/userInputSectionLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#607A9F"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/userSelectionResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center_horizontal"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp" />
            </LinearLayout>


            <!-- User lives section-->
            <LinearLayout
                android:id="@+id/playerLivesLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#607A9F"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/playerLivesMiddleLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#607A9F"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="0dp"
                        android:layout_weight="1"
                        android:background="#607A9F">

                        <ImageView
                            android:id="@+id/livesCircle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/round_circle_background" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignBottom="@+id/livesCircle"
                            android:orientation="vertical"
                            android:paddingTop="18dp">

                            <ImageView
                                android:id="@+id/livesImage"
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/heart_healthy" />

                            <TextView
                                android:id="@+id/livesHeaderText"
                                android:layout_width="match_parent"
                                android:layout_height="15dp"
                                android:fontFamily="monospace"
                                android:gravity="bottom|center"
                                android:text="@string/livesHeaderText"
                                android:textColor="#B0C7E6"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/livesLeftText"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:fontFamily="monospace"
                                android:gravity="top|center"
                                android:text="@string/livesText"
                                android:textColor="#FFFFFF"
                                android:textSize="10sp" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>

            <!-- Score -->
            <LinearLayout
                android:id="@+id/playerScoreLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#607A9F"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:background="#607A9F">

                    <ImageView
                        android:id="@+id/scoreCircleImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:src="@drawable/round_circle_background" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignBottom="@+id/scoreCircleImage"
                        android:layout_alignParentLeft="true"
                        android:orientation="vertical"
                        android:paddingTop="18dp">

                        <TextView
                            android:id="@+id/textViewScoreText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            android:fontFamily="monospace"
                            android:gravity="bottom|center"
                            android:text="@string/scoreHeaderText"
                            android:textColor="#B0C7E6"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/score"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.9"
                            android:gravity="top|center_horizontal"
                            android:text="@string/zeroScore"
                            android:textColor="#FFFFFF"
                            android:textSize="10sp" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <!--count down -->
            <LinearLayout
                android:id="@+id/countDownLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#607A9F"
                android:orientation="vertical">

                <androidx.core.widget.ContentLoadingProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="?android:progressBarStyleHorizontal"
                    android:progress="0"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:progressDrawable="@drawable/circle" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>